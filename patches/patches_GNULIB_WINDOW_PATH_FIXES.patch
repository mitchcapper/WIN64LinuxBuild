+                  dest = mempcpy (rname, buf, pfxlen);
+                  *dest++ = DIR_SEPARATOR; /* It's an absolute symlink */
+                  if (DOUBLE_SLASH_IS_DISTINCT_ROOT)
+                    {
+                      if (ISSLASH (buf[1]) && !ISSLASH (buf[2]) && !pfxlen)
+                        *dest++ = DIR_SEPARATOR;
+                      *dest = '\0';
+                    }
