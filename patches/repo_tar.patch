+	      }
+	      break;
+
+	    case '*':
+	      if (0 <= len)
+		{
+		  intmax_t w;
+		  if (!arg)
+		    w = getwidth (fp);
+		  else
+		    {
+		      char *end;
+		      w = stoint (arg, &end, NULL, 0, INTMAX_MAX);
+		      if ((end == arg) | *end)
+			w = 80;
+		    }
+		  for (; w > len; len++)
+		    fputc (' ', fp);
+		}
+	      break;
+
+	    default:
+	      fputc ('%', fp);
+	      fputc (*ip, fp);
+	      len = add_printf (len, 2);
+	      break;
+	    }
+	  arg = NULL;
+	}
