+	fi
+	for name in "${TRY_NAMES[@]}"; do
+		if test -f "${dir}/${name}"; then
+			if [ $dir_in_libpath -eq 1 ]; then
+				FULL_LIB_NAME="$name"
+			else
+				FULL_LIB_NAME="${dir}/${name}"
+			fi
