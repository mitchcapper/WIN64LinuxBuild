+function GetLibNameIfInDir() {
+	local lib=$1
+	local dir=$2
+	local dir_in_libpath=$3
+	local shared=$4
+	FULL_LIB_NAME=''
+
+	local TRY_NAMES=("${lib}.lib" "${lib}lib.lib" "lib${lib}.a" "lib${lib}.lib")
+	if $shared; then
+		TRY_NAMES+="${lib}.dll.lib"; #prefer dynamic last
